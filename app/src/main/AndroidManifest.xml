        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyUCCapp"
        tools:targetApi="31">
        <activity

            android:name=".UccCourse"
            android:exported="false"
            android:label="IT Department Courses"/>
        <activity
            android:name=".UccFaculty"
            android:exported="false"
            android:label="Staff Directory"/>
        <activity
            android:name=".Admission"
            android:exported="false"
            android:label="Admission Details"/>
        <activity
            android:name=".UccStaff"
            android:exported="false"
            android:label="Staff Bio"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"/>
        <activity
            android:name=".UccSocial"
            android:exported="false"
            android:label="Social Media Handles"/>
        <activity
            android:name=".Welcome_Scrn"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>