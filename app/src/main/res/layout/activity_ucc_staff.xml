<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UccStaff">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lvFaculty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16sp"
        app:cardElevation="0.1sp"
        android:theme="@style/Theme.MaterialComponents.Light"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="16sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileImage"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_margin="8sp"
                android:layout_marginEnd="16sp"
                android:elevation="0sp"
                app:cardCornerRadius="50sp"
                app:cardElevation="0sp">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_faculty"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4sp"
                    android:layout_marginBottom="0sp"
                    android:text="Name"
                    android:textAlignment="gravity"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:padding="1.8sp"
                        android:paddingStart="0sp"
                        android:src="@drawable/ic_job_position" />


                    <TextView
                        android:id="@+id/tvFPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Position" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:padding="1.8sp"
                        android:paddingStart="0sp"
                        android:src="@drawable/ic_telephone" />

                    <TextView
                        android:id="@+id/tvFPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:autoLink="phone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8sp"
                        android:padding="1.8sp"
                        android:paddingStart="0sp"
                        android:src="@drawable/ic_mail" />

                    <TextView
                        android:id="@+id/tvFEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:autoLink="email"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>